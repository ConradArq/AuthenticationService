@model AuthenticationService.Shared.Dtos.Templates.Emails.EmailConfirmationEmailDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        .btn {
            padding: 10px 15px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h1>Email Confirmation</h1>
    <p>Hello @Model.FirstName,</p>
    <p>Thank you for signing up. Please confirm your email by clicking the button below:</p>
    <p><a class="btn" href="https://yourdomain.com/confirm-email?email=@Model.Email&token=@Model.Token">Confirm Email</a></p>
    <p>If you did not request this, please ignore this message.</p>
</body>
</html>