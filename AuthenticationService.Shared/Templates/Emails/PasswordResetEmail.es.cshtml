@model AuthenticationService.Shared.Dtos.Templates.Emails.PasswordResetEmailDto

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecimiento de Contraseña</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        .btn {
            padding: 10px 15px;
            background-color: #DC3545;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h1>Restablecimiento de Contraseña</h1>
    <p>Hola @Model.FirstName,</p>
    <p>Hemos recibido una solicitud para restablecer tu contraseña. Puedes restablecerla haciendo clic en el botón siguiente:</p>
    <p><a class="btn" href="https://yourdomain.com/reset-password?token=@Model.Token">Restablecer Contraseña</a></p>
    <p>Si no solicitaste esto, puedes ignorar este mensaje.</p>
</body>
</html>